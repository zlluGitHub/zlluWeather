/**index.wxss**/
.inner{
  color: #fff;
  font-family: "楷体";
}
.inner-top{
  padding: 40rpx;
  font-size: 55rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.top-right{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.position-icon{
  margin-right: 20rpx;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}
.text-left{
  margin-right: 20rpx;
}
  .temperature{
    padding: 40rpx;
    font-size: 30rpx;

    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .tem-num{
    font-size: 126rpx;
  }
  .weather-icon{
    width: 120rpx;
    height: 120rpx;
    animation: looping 5s linear infinite;
  }
  @keyframes looping {
    0% {
      transform: rotate(0);
    }
    25% {
      transform: rotate(90deg);
    }
    50% {
      transform: rotate(180deg);
    }
    75% {
      transform: rotate(270deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  .text1,.text2,.text3{
    padding-left: 20rpx;
    display: block;
  }
  .text2{
    margin: 20rpx 0;
  }
  .warp{
    padding: 20rpx;
    font-size: 32rpx;
    background-color: rgba(0, 0, 0, 0.3);
  }
  .details-box{
    display: flex;
    justify-content: space-around;
    width: 1250rpx;
    background-color: rgba(0, 0, 0, 0.3);  
      
  }
  .details{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    padding: 12rpx;
  
  }
  .list-warp{
    font-size: 32rpx;
    color: #fff;
    font-family: "楷体";
    margin-top: 30rpx;
    background-color: rgba(0, 0, 0, 0.3);  
  }
  .list-title{
    padding: 20rpx;
     border-bottom: 1px solid #fff;
  }
.list-content{
  padding: 20rpx;
  }