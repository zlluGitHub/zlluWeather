/**index.wxss**/

.inner {
    color: #fff;
    font-family: "楷体";
}

.inner-top {
    padding: 40rpx;
    font-size: 55rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.top-right {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.position-icon {
    margin-right: 20rpx;
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
}

.text-left {
    margin-right: 20rpx;
}

.temperature {
    padding: 40rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tem-num {
    font-size: 126rpx;
}

.weather-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    opacity: 0.8;
    box-shadow: 0 0 50rpx orange;
    animation: looping 1s alternate infinite;
}

@keyframes looping {
    from {
        transform: scale(0.9)
    }
    to {
        transform: scale(1)
    }
    /* 0% {
        transform: scale()
    }
    25% {
        transform: rotate(90deg);
    }
    50% {
        transform: rotate(180deg);
    }
    75% {
        transform: rotate(270deg);
    }
    100% {
        transform: rotate(360deg);
    } */
}

.slide-image {
    width: 100%;
}

.other {
    font-size: 28rpx;
    margin: 30rpx;
    position: relative;
}

.horn {
    position: absolute;
    top: -70rpx;
    right: 28rpx;
    width: 60rpx;
    height: 60rpx;
}

.text1,
.text2,
.text3 {
    padding-left: 20rpx;
    display: block;
}

.text2 {
    margin: 20rpx 0;
}

.warp {
    margin-top: 20px;
    padding: 20rpx;
    font-size: 32rpx;
    background-color: rgba(0, 0, 0, 0.3);
}

.details-box {
    margin-top: 40rpx;
    background-color: rgba(0, 0, 0, 0.3);
}

.details {
    display: flex;
    font-size: 28rpx;
    padding: 20rpx;
    text-align: center;
}

.text-block {
    width: 150rpx;
}

.text-block-last {
    width: 210rpx;
}

.list-warp {
    font-size: 32rpx;
    color: #fff;
    font-family: "楷体";
    margin-top: 30rpx;
    background-color: rgba(0, 0, 0, 0.3);
}

.list-title {
    padding: 20rpx;
    border-bottom: 1px solid #fff;
}

.list-content {
    padding: 20rpx;
}

.weather-icon-other {
    width: 40rpx;
    height: 40rpx;
}

.footer {
    padding: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
    background-color: #fff;
}